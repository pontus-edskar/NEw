@model List<Project.Models.GameStatusModel>

<table class="memory-table">
    @for (int i = 0; i < Model.Count; i += 6)
    {
        <tr>
            @for (int j = 0; j < 6; j++)
            {
                if (i + j < Model.Count)
                {
                    var card = Model[i + j];
                    <td class="memory-card">
                        <button class="card-button @(card.Clicked ? "visible" : "hidden") @(card.Matched ? "matched" : "")"
                                data-id="@card.AnimalId"
                                onclick="flipCard(this)">
                            <span>@(card.Clicked || card.Matched ? card.AnimalName : "")</span>
                        </button>
                    </td>
                }
            }
        </tr>
    }
</table>